<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <!-- Receiver for the 'IndividualNoteWidget' -->
        <receiver android:name=".receiver.IndividualNoteReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/individual_note_widget_info"/>
        </receiver>

        <!-- Receiver for the 'AllNotesWidget' -->
        <receiver android:name=".receiver.AllNotesReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/all_notes_widget_info"/>
        </receiver>
    </application>
</manifest>